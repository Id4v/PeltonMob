{
    "env": {
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "prefer-promise-reject-errors" : "off",
        "no-param-reassign": ["error", {"props":  false}],
        "react/react-in-jsx-scope" : "off",
        "react/style-prop-object" : "off"
    },
    "settings": {
        "import/resolver": {
            "node" : {
                "paths": ["src"]
            }
        }
    }
}
